  <script>
    function showchatf() {
      if(document.getElementById("chatf").style.display == "block"){
        document.getElementById("chatf").style.display = "none";
      }
      else{
        document.getElementById("chatf").style.display = "block";
      }
    }
    let i=0;
    let txt='\n'+'Join now to get Enlightened!'
    let speed=20;
    function typequote(){
        if(i<txt.length){
            document.getElementsByClassName('tagline')[0].innerHTML += txt.charAt(i);
            i++;
            setTimeout(typequote,speed);
        }
        document.getElementsByClassName('tagline')[0].style = "color:#000; margin-top:80px; margin-left:30px;  font-size:50px;font-family: 'Cabin', sans-serif;" ;
    }
    setTimeout(typequote,500);
    $(window).on('beforeunload', function(){
        $(window).scrollTop(0);
      });

      function offsetAnchor() {
        if (location.hash.length !== 0) {
          window.scrollTo(window.scrollX, window.scrollY - 500);
        }
      }

      // Captures click events of all <a> elements with href starting with #
      $(document).on('click', 'a[href^="#toptions"]', function(event) {
        // Click events are captured before hashchanges. Timeout
        // causes offsetAnchor to be called after the page jump.
        window.setTimeout(function() {
          offsetAnchor();
        }, 0);
      });

      // Set the offset when entering page with hash present in the url
      window.setTimeout(offsetAnchor, 0);
  </script>
